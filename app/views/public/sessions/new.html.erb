<div class="container">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">ログイン</h4>
  <br>
  <br>
  <div><h6 style="background-color:#EEEEEE;color:dark;display:inline">会員の方はこちらから</h6></div>
  <br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row form-group">
    <div class="col-sm-3"><%= f.label :メールアドレス %></div>
    <div class="col-sm-9"><%= f.email_field :email, placeholder:"sample@example.com", autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row form-group">
    <div class="col-sm-3"><%= f.label :パスワード %></div>
    <div class="col-sm-9"><%= f.password_field :password, placeholder:"password", autocomplete: "current-password" %></div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row form-group">
      <div class="col-sm-3"><%= f.check_box :remember_me %>
      <%= f.label :ログイン状態を保存する %></div>
    </div>
  <% end %>

  <div class="form-group offset-3 actions">
    <%= f.submit "ログイン" , class: "btn btn-primary" %>
  </div>
<% end %>

<tr>
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">会員登録がお済みでない方</h4><br><br>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行なってください。
    <% end %>
</tr>